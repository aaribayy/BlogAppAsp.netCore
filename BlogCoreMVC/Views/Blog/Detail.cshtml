@model BlogTb
@{
    ViewData["Title"] = "Blog";
}
@* <h2 class="text-center mb-3">Blog</h2> *@

<div class="container mt-2">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6 offset-md-3 shadow rounded">
            <div class="text-center mt-2">
                <img src="/blogs/@Model.ImageFileName" width="500" height="200" class="img-fluid rounded" alt="@Model.Title" />
            </div>
            <div class="mt-3">
                <h3 class="text-center">@Model.Title</h3>
            </div>
            <div class="mt-2">
                <div class="col">
                    <strong>@ViewData["Author"]</strong>
                </div>
                <div class="col">
                    <strong>@Model.PublishedDate</strong>
                </div>
            </div>
            <div class="mt-3">
                <p class="text-center fst-italic">@Model.Description</p>
            </div>
            <div class="mt-4">
                <p class="text-justify">@Model.Content</p>
            </div>
        </div>
    </div>
</div>
