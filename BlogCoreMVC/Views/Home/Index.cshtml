@{
    ViewData["Title"] = "Home Page";
}


<div class="container shadow mt-4 rounded">
    <div class="row">
        <div class=" col-sm-12 col-md-12 col-lg-12">
            <div id="carouselExampleSlideOnly" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/content/images.jfif" class="d-block w-100" style="height:500px" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/content/images (1).jfif" class="d-block w-100" style="height:500px" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/content/download (2).jfif" class="d-block w-100" style="height:500px" />
                    </div>
                </div>
            </div>
            <div class="mt-3 mb-3">
                <h2 class="text-center">Blog Application</h2>
            </div>
        </div>
    </div>
    
</div>

<div class="row justify-content-center">
    <div class="col-sm-4 d-grid">
        <a class="btn btn-outline-dark" asp-controller="Blog" asp-action="Index" role="button">
            Explore
        </a>
    </div>
    <div class="col-sm-4 d-grid">
        <a class="btn btn-outline-dark" asp-controller="Blog" asp-action="Create" role="button">
            Create Blogs
        </a>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#carouselExampleSlideOnly').carousel();
    });
</script>
